  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "build": "tsc --build tsconfig.json",
    "prepare": "yarn build",
    "pretest": "yarn lint",
    "test": "mocha --timeout 60000 --require ts-node/register --exit test/*.ts test/**/*.ts",
    "e2e-test": "mocha --timeout 300000 --require ts-node/register --exit e2e-test/**/*.ts",
    "start": "node ./dist/index.js start"
  },
  "dependencies": {
    "@polkadot/api": "^7.10.1",
    "@w3f/config": "^0.1.1",
    "@w3f/logger": "^0.4.2",
    "commander": "^4.0.0",
    "express": "^4.17.3",
    "got": "^10.3.0",
    "prom-client": "^11.5.3",
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.6",
    "@types/fs-extra": "^8.1.0",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.18.12",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "@w3f/test-utils": "^1.2.20",
    "chai": "^4.3.6",
    "eslint": "7.32.0",
    "fs-extra": "^9.0.0",
    "lodash": "^4.17.19",
    "mocha": "^9.2.1",
    "nock": "^12.0.3",
    "sinon": "^8.1.0",
    "tmp": "^0.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.5.5"
  }
